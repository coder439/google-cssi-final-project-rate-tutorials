{
  "hosting": {
      "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-store, max-age=0"
                    }
                ]
            }
        ],
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5001
    },
    "database": {
      "port": 3333
    },
    "ui": {
      "enabled": true
    }
  }
}
